<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/drawer_Layout"
    tools:openDrawer="start">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="60dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gossipfunda"
                        android:textSize="56dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/chewy"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/homemade_apple"
                        android:text="From zero to one"
                        android:textSize="22dp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/gossipfunda_logo1"/>

            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@drawable/bg1"
                app:cardCornerRadius="30dp"
                app:cardElevation="10dp"
                android:layout_gravity="center"
                app:cardUseCompatPadding="true"
                android:onClick="search_card">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bg1"
                    android:scaleType="centerCrop"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/chewy"
                        android:padding="10dp"
                        android:text="Search"
                        android:textColor="@color/white"
                        android:textSize="85dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="135dp"
                        android:text="Find articles using keywords"
                        android:textSize="28dp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/chewy"/>

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_search"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="-30dp"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@drawable/bg2"
                app:cardCornerRadius="30dp"
                app:cardElevation="10dp"
                android:layout_gravity="center"
                app:cardUseCompatPadding="true"
                android:onClick="home_card">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bg2"
                    android:scaleType="centerCrop"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/chewy"
                        android:padding="10dp"
                        android:text="Home"
                        android:textColor="@color/white"
                        android:textSize="90dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="135dp"
                        android:text="Find all interesting articles here"
                        android:textSize="24dp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/chewy"/>

                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_home"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="-30dp"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="10dp"
                android:layout_gravity="center"
                app:cardUseCompatPadding="true"
                android:onClick="android_card">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bg3"
                    android:scaleType="centerCrop"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/chewy"
                        android:padding="10dp"
                        android:text="Android"
                        android:textColor="@color/white"
                        android:textSize="80dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="135dp"
                        android:text="All the android goodies here"
                        android:textSize="24dp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/chewy"/>

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_android"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="-30dp"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="10dp"
                android:layout_gravity="center"
                app:cardUseCompatPadding="true"
                android:onClick="apple_card">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bg4"
                    android:scaleType="centerCrop"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Apple"
                        android:textSize="90dp"
                        android:textColor="@color/white"
                        android:padding="10dp"
                        android:fontFamily="@font/chewy" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="135dp"
                        android:text="Find new articles on iOS"
                        android:textSize="30dp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/chewy"/>

                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_apple"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="-30dp"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="10dp"
                android:layout_gravity="center"
                app:cardUseCompatPadding="true"
                android:onClick="channel_card">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bg5"
                    android:scaleType="centerCrop"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Channel"
                        android:textSize="80dp"
                        android:textColor="@color/white"
                        android:padding="10dp"
                        android:fontFamily="@font/chewy"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="135dp"
                        android:text="Check out our YouTube Channel"
                        android:textSize="24dp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/chewy"/>

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_channel"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="-30dp"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@drawable/bg2"
                app:cardCornerRadius="30dp"
                app:cardElevation="10dp"
                android:layout_gravity="center"
                app:cardUseCompatPadding="true"
                android:onClick="sponsor_card">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bg6"
                    android:scaleType="centerCrop"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sponsor"
                        android:textSize="85dp"
                        android:textColor="@color/white"
                        android:padding="10dp"
                        android:fontFamily="@font/chewy"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="135dp"
                        android:text="Be our amazing sponsor"
                        android:textSize="30dp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/chewy"/>

                    <ImageView
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_sponsor"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="-30dp"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@drawable/bg2"
                app:cardCornerRadius="30dp"
                app:cardElevation="10dp"
                android:layout_gravity="center"
                app:cardUseCompatPadding="true"
                android:onClick="blog_card">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bg7"
                    android:scaleType="centerCrop"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Blog"
                        android:textSize="90dp"
                        android:textColor="@color/white"
                        android:padding="10dp"
                        android:fontFamily="@font/chewy"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="135dp"
                        android:text="Check out our blogs"
                        android:textSize="30dp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/chewy"/>

                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_blog"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="-30dp"
                        android:layout_marginLeft="20dp"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="10dp"
                android:layout_gravity="center"
                app:cardUseCompatPadding="true"
                android:onClick="contact_card">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bg9"
                    android:scaleType="centerCrop"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact"
                        android:textSize="75dp"
                        android:textColor="@color/white"
                        android:padding="10dp"
                        android:fontFamily="@font/chewy"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="135dp"
                        android:text="Contact the Gossipfunda admin"
                        android:textSize="22dp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/chewy"/>

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_contact"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="-30dp"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/design_default_color_primary_variant"
            android:elevation="4dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:id="@+id/toolbar" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fragment_container"/>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/activity_main_nav_header"
        app:menu="@menu/main_menu"
        android:id="@+id/nav_view"
        android:layout_gravity="start"/>

</androidx.drawerlayout.widget.DrawerLayout>